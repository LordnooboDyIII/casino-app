<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("../partials/head.ejs") %>
    <meta charset="UTF-8">
    <title><%= pageTitle %> | <%= siteTitle %></title>
    <link rel="stylesheet" href="/css/profile.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <%- include('../partials/navbar') %>

    <div class="profile-container">
        <div class="d-flex flex-column align-items-center">
            <img class="profile-avatar"
                src="<%= user && user.avatar ? user.avatar : '/images/default-avatar.png' %>" alt="Profile Picture">
            <div class="profile-title">
                <%= user && user.username ? user.username : "Guest" %>
            </div>
            <div class="text-muted mb-2" style="font-size:1rem;">
                <%= user && user.email ? user.email : "No email available" %>
            </div>
        </div>
        <div class="profile-info">
            <label>Member Since:</label>
            <span class="value">
                <%= user && user.createdAt ? user.createdAt.toLocaleDateString() : "N/A" %>
            </span>
            <label>Balance:</label>
            <span class="value">$
                <%= user && user.balance !== undefined ? user.balance.toLocaleString() : "0.00" %>
            </span>
            <!-- Add more profile fields as needed -->
        </div>
        <div class="profile-actions">
            <a href="/profile/edit" class="btn-edit">Edit Profile</a>
            <form action="/logout" method="POST" style="display:inline;">
                <button type="submit" class="btn-edit logout" style="margin-left:16px;">
                    Logout
                </button>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>